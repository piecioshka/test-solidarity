{
  "$schema": "https://raw.githubusercontent.com/infinitered/solidarity/master/solidaritySchema.json",
  "config": {
    "output": "moderate"
  },
  "requirements": {
    "Git": [
      {
        "rule": "cli",
        "binary": "git",
        "semver": ">=2.0.0",
        "version": "--version"
      },
      {
        "rule": "shell",
        "command": "git config user.name",
        "match": ".+"
      },
      {
        "rule": "shell",
        "command": "git config user.email",
        "match": ".+@.+"
      }
    ],
    "Node.js": [
      {
        "rule": "cli",
        "binary": "node",
        "semver": ">=10.x.x"
      }
    ],
    "npm": [
      {
        "rule": "cli",
        "binary": "npm",
        "semver": ">=6.x.x"
      }
    ],
    "SSH": [
      {
        "rule": "cli",
        "binary": "ssh"
      }
    ],
    "GitHub": [
      {
        "rule": "shell",
        "__comment__": "Redirect stderr to stdout",
        "command": "ssh -T git@github.com 2>&1",
        "match": "You've successfully authenticated"
      }
    ],
    "Visual Studio Code": [
      {
        "rule": "cli",
        "binary": "code",
        "semver": ">=1.5.0",
        "version": "--version"
      }
    ],
    "Google Chrome": [
      {
        "rule": "dir",
        "location": "/Applications/Google Chrome.app/",
        "platform": "darwin"
      },
      {
        "rule": "dir",
        "location": "C:\\Program Files (x86)\\Google\\Chrome\\Application\\chrome.exe",
        "platform": "windows"
      }
    ]
  }
}
